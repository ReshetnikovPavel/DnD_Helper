                            Grid.Row="21"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.SleightOfHand.Name}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="22"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Stealth.Name}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="23"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Survival.Name}"/>
                    </Grid>
                </Grid>

                <Grid Grid.Column = "1">
                    <Grid RowDefinitions="*, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *, *" Margin = "10, 5, 10, 5">
                        <Button Margin = "10"
                            HorizontalOptions="Start"
                            Grid.Row="0"
                            LineBreakMode="WordWrap"
                            Text="{Binding SavingThrows.Strength.Modifier}"/>
                        <Button Margin = "10"
                            HorizontalOptions="Start"
                            Grid.Row="1"
                            LineBreakMode="WordWrap"
