                            Grid.Row="16"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Nature.Name}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="17"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Perception.Name}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="18"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Performance.Name}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="19"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Persuasion.Name}"/>
                        <Button Margin = "10" 
