<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DnD_Helper.CharacterSheetPage"
             xmlns:local="clr-namespace:DnD_Helper"
             x:DataType="local:CharacterSheetPage"
             Style="{StaticResource ContentPage}"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="{Binding NameDisplay}" />
            <Label Text="{Binding MainInfoDisplay}" />
            <Label Text="{Binding ArmourClassDisplay}" />
            <Label Text="{Binding SpeedDisplay}" />
            <Label Text="{Binding HpDisplay}" />
            <Label Text="{Binding InitiativeDisplay}" />
            <ListView ItemsSource="{Binding AbilitiesDisplay}"
                  SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding .}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView ItemsSource="{Binding SkillsDisplay}"
                  SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding .}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>