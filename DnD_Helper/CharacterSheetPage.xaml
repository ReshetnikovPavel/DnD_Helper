                            Text="{Binding Skills.Religion.Modifier}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="21"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.SleightOfHand.Modifier}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="22"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Stealth.Modifier}"/>
                        <Button Margin = "10" 
                            HorizontalOptions="Start"
                            Grid.Row="23"
                            LineBreakMode="WordWrap"
                            Text="{Binding Skills.Survival.Modifier}"/>
                    </Grid>
                </Grid>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>