<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DnD_Helper.AbilityScoresSelectionPage"
             Title="Распределите характеристики"
             Style="{StaticResource ContentPage}">

    <ContentPage.Resources>
        <ControlTemplate x:Key="AbilityScoreTemplate">
            <HorizontalStackLayout>
                <Label Text="{TemplateBinding Value}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                </Label>
            </HorizontalStackLayout>
        </ControlTemplate>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <ContentView ControlTemplate="{StaticResource AbilityScoreTemplate}">
        </ContentView>
    </VerticalStackLayout>
</ContentPage>