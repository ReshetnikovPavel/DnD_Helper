<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DnD_Helper.AbilityScoresSelectionPage"
             xmlns:controls="clr-namespace:DnD_Helper.Resources.Controls"
             xmlns:app="clr-namespace:DnD_Helper"
             Title="Распределите характеристики"
             x:DataType="app:AbilityScoresSelectionPage"
             Style="{StaticResource ContentPage}">

    <Grid RowDefinitions="*, *, *">
        <Label Text="{Binding TestString}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="50" />
        <controls:AbilityScoreControl x:Name="counter"
            Grid.Row="1" ValueDisplay="{Binding TestString}"/>
        <Button Grid.Row="2" Clicked="Button_Clicked" />
    </Grid>
    
</ContentPage>