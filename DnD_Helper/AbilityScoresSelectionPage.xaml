<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DnD_Helper.AbilityScoresSelectionPage"
             xmlns:controls="clr-namespace:DnD_Helper.Resources.Controls"
             xmlns:app="clr-namespace:DnD_Helper"
             x:DataType="app:AbilityScoresSelectionPage"
             Title="Распределите характеристики"
             Style="{StaticResource ContentPage}">

    <Grid RowDefinitions="*, *">
        <controls:AbilityScoreControl AbilityScore="{Binding Intelligence}"/>
        <controls:AbilityScoreControl Grid.Row="1"/>
    </Grid>
    
</ContentPage>